\begin{lemma*}
  {}
  Let $\tup{\grpAset, \gtimes, \idgrp, \ginv}$ be a group. Then
  \begin{enumerate}
    \item{} $\ginv(\idgrp) = \idgrp$;
    \item{}  $ \ginv(\ginv(\grpela)) = \grpela \quad \quad \forall \  \grpela \in \grpAset$;
    \item{} $\ginv(\grpela \gtimes \grpelb ) = \ginv(\grpelb) \gtimes \ginv(\grpela) \quad \quad \forall \ \grpela, \grpelb \in \grpAset$.
  \end{enumerate}\end{lemma*}
